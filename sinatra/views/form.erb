<% if @name && !@name.empty? %>
  <h1>Hello <%= @name %>!</h1>
<% end %>
<% if @message %>
  <h1><%= @message%></h1>
<% end %>
  
<form action='/' method='post'>
  <input type='text' name ='name' value='<%=@name%>'>
  <input type='text' name ='age'>
  <input type='submit'>
</form>
<ul>
  <% @names.each do |name| %>
    <li><%=name%></li>
  <%end%>
</ul>
